    <%= form.text_field :last_name, class: "form-control", placeholder:"Enter Last Name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class: "form-control", placeholder:"Enter Email Address" %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone, class: "form-control", placeholder:"Enter Phone Number" %>
  </div>

  <div class="form-group">
    <%= form.text_field :twitter, class: "form-control", placeholder:"Enter Your Twitter Username" %>
  </div>

  <br />
  <div>
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
