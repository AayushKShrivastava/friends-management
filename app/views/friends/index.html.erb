<table id="friends" class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="2" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td class="text-center"><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-outline-secondary" %></td>
        <td class="text-center"><%= link_to "Delete", friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
